{
	"name": "Extension Test",
	"description": "Building an extension",
	"version": "1.0",
	"manifest_version": 2,
	"background": {
		"service_worker": "background.js"
	 },
	 "content_scripts": [
		{
		    "matches": ["<all_urls>"],
		    "run_at": "document_start",
		    "js": ["content.js"]
		}
	 ],
	 "browser_action": {
		"default_title": "OIDC Authentication",
		"default_icon": "lock_small.png"
	 },
	 "permissions": [
	 	"storage",
	 	"tabs",
	 	"webRequest",
	 	"webRequestBlocking",
	 	"webNavigation",
	 	"http://*/*",
	 	"https://*/*",
	 	"file://*/*"
	]
}	
     	
